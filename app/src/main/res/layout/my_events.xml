<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muddapeople.theone.NextActivity"
    android:background="@drawable/arriere_plan_acceuil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mes events"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_accueil_calendrier"
        android:id="@+id/button6"
        android:allowUndo="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:layout_gravity="bottom"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_accueil_event"
        android:id="@+id/button3"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_accueil_new_event"
        android:id="@+id/button4"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_accueil_reglage"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_gravity="bottom"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp" />

</RelativeLayout>